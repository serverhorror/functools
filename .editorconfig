# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_size = 8
tab_width = 8
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 2
tab_width = 2

[{*.yml,*.yaml}]
indent_size = 2
tab_width = 2

[*.go]
indent_size = 8
tab_width = 8
indent_style = tab
